        <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
        <ul class="layui-nav layui-nav-tree" lay-filter="leftNav">

            @foreach (var smenu in s_menus)
            {
                <li class="layui-nav-item">
                    <a class="" href="javascript:;">@smenu.title</a>
                    <dl class="layui-nav-child">
                        @foreach (var menu in smenu.children)
                        {
                            var _menu = menu as SMenuViewModel;
                            <dd><a data-id="@_menu.id" data-url="@_menu.Url" href="javascript:;" data-text="@_menu.title">@_menu.title</a></dd>
                        }
                    </dl>
                </li>
            }
